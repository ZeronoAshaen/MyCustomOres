package co.zerono.pc.blocks;

import java.util.List;
import java.util.Random;

import co.zerono.pc.reference.Names;
import co.zerono.pc.reference.Settings;
import net.minecraft.block.material.Material;
import net.minecraft.client.renderer.texture.IIconRegister;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;
import net.minecraft.util.IIcon;
import cpw.mods.fml.relauncher.Side;
import cpw.mods.fml.relauncher.SideOnly;

public class BlockMultiOre extends BlockPC
{
	@SideOnly(Side.CLIENT)
	private IIcon[] texture;
	
	public BlockMultiOre()
	{
		super(Material.rock);
		this.setBlockName(Names.Blocks.ORE_BLOCK);
		this.setHardness(3.0F);
		this.setResistance(5.0F);
		this.setHarvestLevel("pickaxe", 2);
	}
	@Override
	public Item getItemDropped(int meta, Random rand, int fortune)
	{
		return Item.getItemFromBlock(this);
	}
	@Override
	@SideOnly(Side.CLIENT)
	public void getSubBlocks(Item item, CreativeTabs creativeTabs, List list)
	{
		for (int meta = 0; meta < Settings.Ore.ORE_NAMES.length; meta++)
		{
			list.add(new ItemStack(item, 1, meta));
		}
	}
	@Override
	public int damageDropped(int meta)
	{
		return meta;
	}
	@Override
	@SideOnly(Side.CLIENT)
	public void registerBlockIcons(IIconRegister iconRegister)
	{
		this.texture = new IIcon[Settings.Ore.ORE_NAMES.length];
		
		for (int i=0; i<Settings.Ore.ORE_NAMES.length; i++)
		{
			texture[i] = iconRegister.registerIcon(getUnwrappedUnlocalizedName(this.getUnlocalizedName()) + "_texture");
		}
	}
	@Override
	@SideOnly(Side.CLIENT)
	public IIcon getIcon(int side, int meta)
	{
		return texture[meta];
	}
}
